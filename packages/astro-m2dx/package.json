{
  "name": "astro-m2dx",
  "version": "0.4.1",
  "description": "Remark plugin to enhance MDX in the scope of Astro site generation",
  "author": "christian@hackyourshack.org",
  "homepage": "https://astro-m2dx.netlify.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/christian-hackyourshack/npm.git"
  },
  "license": "MIT",
  "keywords": [
    "remark-plugin",
    "astro",
    "markdown",
    "mdx"
  ],
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "concurrently \"pnpm:build:*\"",
    "build:modules": "vite build",
    "build:types": "tsc --project tsconfig.build.json",
    "clean": "rimraf -rf ./dist/",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "acorn": "^8.8.0",
    "estree-util-visit": "^1.2.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "mdast-util-mdx": "^2.0.0",
    "remark": "^14.0.2",
    "remark-directive": "^2.0.1",
    "remark-mdx": "^2.1.3"
  },
  "devDependencies": {
    "@types/estree": "^1.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/mdast": "^3.0.10",
    "@types/node": "^18.8.2",
    "@types/unist": "2.0.6",
    "@vitest/ui": "^0.23.4",
    "concurrently": "^7.4.0",
    "eslint-config-base": "workspace:*",
    "hast-util-to-html": "^8.0.3",
    "mdast-util-to-hast": "^12.2.4",
    "rehype-format": "^4.0.1",
    "rimraf": "^3.0.2",
    "tsconfig": "workspace:*",
    "typescript": "^4.8.4",
    "unified": "^10.1.2",
    "vfile": "^5.3.5",
    "vite": "^3.1.4",
    "vite-config": "workspace:*",
    "vitest": "^0.23.4"
  }
}
