{
  "name": "m2dx-utils",
  "version": "0.2.1",
  "description": "Utilities for MDX/mdast",
  "author": "christian@hackyourshack.org",
  "homepage": "https://m2dx-utils.netlify.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/christian-hackyourshack/npm.git"
  },
  "license": "MIT",
  "keywords": [
    "MDX",
    "mdast",
    "TypeScript"
  ],
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "clean": "rimraf -rf ./dist/",
    "test": "mintest",
    "test:dev": "tsx watch src/utils/mdx/toText.spec.ts",
    "test:watch": "tsx watch node_modules/mintest-green/dist/bin.js"
  },
  "dependencies": {
    "acorn": "^8.8.1",
    "estree-util-visit": "^1.2.0",
    "hast-util-to-html": "^8.0.3",
    "mdast-util-mdx": "^2.0.0",
    "mdast-util-to-hast": "^12.2.4",
    "remark": "^14.0.2",
    "remark-directive": "^2.0.1",
    "remark-mdx": "^2.1.5"
  },
  "devDependencies": {
    "@internal/utils": "workspace:*",
    "@types/estree": "^1.0.0",
    "@types/hast": "^2.3.4",
    "@types/mdast": "^3.0.10",
    "@types/node": "^18.11.9",
    "@types/unist": "2.0.6",
    "concurrently": "^7.5.0",
    "esbuild": "^0.15.14",
    "esbuild-node-externals": "^1.5.0",
    "mintest-green": "workspace:*",
    "rimraf": "^3.0.2",
    "tsconfig": "workspace:*",
    "tsup": "^6.5.0",
    "tsx": "^3.12.1"
  }
}
