{
  "name": "m2dx-utils",
  "version": "0.0.0",
  "description": "Utilities for MDX/mdast",
  "author": "christian@hackyourshack.org",
  "homepage": "https://m2dx-utils.netlify.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/christian-hackyourshack/npm.git"
  },
  "license": "MIT",
  "keywords": [
    "MDX",
    "mdast",
    "TypeScript"
  ],
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "concurrently \"pnpm:build:*\"",
    "build:modules": "node ./esbuild.config.mjs",
    "build:types": "tsc",
    "clean": "rimraf -rf ./dist/",
    "test": "mintest",
    "test:dev": "tsx watch src/utils/mdx/toText.spec.ts",
    "test:watch": "tsx watch node_modules/mintest-green/dist/mintest.js"
  },
  "dependencies": {
    "acorn": "^8.8.0",
    "estree-util-visit": "^1.2.0",
    "mdast-util-mdx": "^2.0.0",
    "remark": "^14.0.2",
    "remark-directive": "^2.0.1",
    "remark-mdx": "^2.1.5"
  },
  "devDependencies": {
    "@types/estree": "^1.0.0",
    "@types/mdast": "^3.0.10",
    "@types/node": "^18.11.2",
    "@types/unist": "2.0.6",
    "concurrently": "^7.4.0",
    "esbuild": "^0.15.12",
    "esbuild-node-externals": "^1.5.0",
    "mintest-green": "workspace:*",
    "rimraf": "^3.0.2",
    "tsconfig": "workspace:*",
    "tsx": "^3.10.4"
  }
}
