---
import { limitAspectRatio, Picture, PictureProps } from 'astro-art-direction';

export interface Props extends PictureProps {}
const props = Astro.props as Props;

const customProps: Props = {
  artDirection: {
    getHeight: () => {
      return undefined;
    },
    getAspectRatio: limitAspectRatio(5 / 4),
    getLoading: ({ classes }) =>
      classes?.includes('eager') ? 'eager' : undefined,
  },
  widths: [240, 480],
  position: 'attention',
  sizes: '(min-width: 360px) 240px, 100vw',
  ...props,
};
---

<Picture {...customProps} />
